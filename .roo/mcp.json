{
    "mcpServers": {
      "local-python": {
        "command": "python",
        "args": ["./mcp_server.py"],
        "cwd": "${workspaceFolder}",
        "env": {
          "API_KEY": "${env:MY_SECRET}"
        },
        "alwaysAllow": ["do_magic"],
        "disabled": false
      },
      "puppeteer": {
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-puppeteer"],
        "alwaysAllow": ["capture_screenshot", "generate_pdf"],
        "disabled": false
      },
      "modern-remote-server": {
        "type": "streamable-http",
        "url": "https://api.my-company.com/mcp",
        "headers": {
          "Authorization": "Bearer ${env:PROD_TOKEN}"
        },
        "alwaysAllow": ["analyze_data", "report_status"],
        "disabled": false
      },
      "github-copilot": {
        "command": "gh",
        "args": ["copilot", "chat", "--json"],
        "env": {
          "GITHUB_TOKEN": "${env:GITHUB_TOKEN}"
        },
        "alwaysAllow": ["generate_code", "explain_code"],
        "disabled": false
      },
      "openai": {
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-openai"],
        "env": {
          "OPENAI_API_KEY": "${env:OPENAI_API_KEY}"
        },
        "alwaysAllow": ["createCompletion", "createEmbedding"],
        "disabled": false
      },
      "sql-introspector": {
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-sql"],
        "env": {
          "DB_URL": "${env:DB_URL}"
        },
        "alwaysAllow": ["runQuery", "getSchema"],
        "disabled": false
      },
      "weather-api": {
        "type": "streamable-http",
        "url": "https://api.open-meteo.com/v1/forecast",
        "alwaysAllow": ["getCurrentWeather", "getForecast"],
        "disabled": false
      },
      "azure-openai": {
        "type": "streamable-http",
        "url": "${env:AZURE_OPENAI_ENDPOINT}openai/deployments/text-davinci-003/chat/completions?api-version=2023-05-15",
        "headers": {
          "api-key": "${env:AZURE_OPENAI_KEY}"
        },
        "alwaysAllow": [
          "createChatCompletion",
          "createEmbedding"
        ],
        "disabled": false
      },
      "azure-openai-primary": {
        "type": "streamable-http",
        "url": "${env:AZURE_OPENAI_ENDPOINT}openai/deployments/${env:AZURE_OPENAI_DEPLOYMENT_ROUTER}/chat/completions?api-version=2023-05-15",
        "headers": { "api-key": "${env:AZURE_OPENAI_KEY}" },
        "alwaysAllow": ["createChatCompletion"],
        "disabled": false
      },
      "azure-openai-saf": {
        "type": "streamable-http",
        "url": "${env:AZURE_OPENAI_ENDPOINT_SAF}openai/deployments/${env:AZURE_OPENAI_DEPLOYMENT_4O}/chat/completions?api-version=2023-05-15",
        "headers": { "api-key": "${env:AZURE_OPENAI_KEY_SAF}" },
        "alwaysAllow": ["createChatCompletion", "createEmbedding"],
        "disabled": false
      },
      "azure-openai-saf-gpt41": {
        "type": "streamable-http",
        "url": "${env:AZURE_OPENAI_ENDPOINT_SAF}openai/deployments/${env:AZURE_OPENAI_DEPLOYMENT_GPT41}/chat/completions?api-version=2025-01-01-preview",
        "headers": { "api-key": "${env:AZURE_OPENAI_KEY_SAF}" },
        "alwaysAllow": ["createChatCompletion"],
        "disabled": false
      },
      "azure-openai-saf-embeddings": {
        "type": "streamable-http",
        "url": "${env:AZURE_OPENAI_ENDPOINT_SAF}openai/deployments/${env:AZURE_OPENAI_DEPLOYMENT_EMBEDDINGS}/embeddings?api-version=2025-01-01-preview",
        "headers": { "api-key": "${env:AZURE_OPENAI_KEY_SAF}" },
        "alwaysAllow": ["createEmbedding"],
        "disabled": false
      },
      "azure-keyvault": {
        "type": "streamable-http",
        "url": "${env:AZURE_KEYVAULT_URI}/secrets/*?api-version=7.3",
        "headers": {
          "Authorization": "Bearer ${env:AZURE_ACCESS_TOKEN}"
        },
        "alwaysAllow": ["getSecret"],
        "disabled": false
      },
      "azure-blob-storage": {
        "type": "streamable-http",
        "url": "https://${env:AZURE_STORAGE_ACCOUNT_NAME}.blob.core.windows.net/${env:AZURE_STORAGE_CONTAINER_NAME}",
        "headers": {
          "x-ms-version": "2020-10-02",
          "Authorization": "Bearer ${env:AZURE_STORAGE_SAS_TOKEN}"
        },
        "alwaysAllow": [
          "listBlobs",
          "downloadBlob",
          "uploadBlob"
        ],
        "disabled": false
      }
    }
  }