<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <RootNamespace>CognitiveMesh.ReasoningLayer</RootNamespace>
  </PropertyGroup>

  <!-- Exclude sub-project directories that are also ProjectReferences to avoid CS0436/CS0433 type conflicts -->
  <ItemGroup>
    <Compile Remove="TemporalDecisionCore\**" />
    <Compile Remove="MemoryStrategy\**" />
    <Compile Remove="ValueGeneration\**" />
    <Compile Remove="SecurityReasoning\**" />
    <Compile Remove="AnalyticalReasoning\**" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\FoundationLayer\FoundationLayer.csproj" />
    <ProjectReference Include="..\Shared\CognitiveMesh.Shared.csproj" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="TemporalDecisionCore\TemporalDecisionCore.csproj" />
    <ProjectReference Include="MemoryStrategy\MemoryStrategy.csproj" />
    <ProjectReference Include="ValueGeneration\ValueGeneration.csproj" />
    <ProjectReference Include="SecurityReasoning\SecurityReasoning.csproj" />
    <ProjectReference Include="AnalyticalReasoning\AnalyticalReasoning.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Azure.AI.OpenAI" />
    <PackageReference Include="Azure.AI.TextAnalytics" />
    <PackageReference Include="Azure.Identity" />
    <PackageReference Include="Microsoft.Extensions.Configuration" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" />
    <PackageReference Include="Microsoft.Extensions.Logging" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" />
    <PackageReference Include="Microsoft.Extensions.Options" />
    <PackageReference Include="System.Text.Json" />
  </ItemGroup>

  <!-- Global using directives for namespaces expected by sub-directory source files -->
  <ItemGroup>
    <Using Include="Microsoft.Extensions.Logging" />
    <Using Include="Azure" />
    <Using Include="Azure.AI.OpenAI" />
    <Using Include="Azure.AI.TextAnalytics" />
  </ItemGroup>

</Project>
