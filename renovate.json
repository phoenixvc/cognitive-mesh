{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    "group:allNonMajor"
  ],
  "labels": ["dependencies"],
  "rangeStrategy": "pin",
  "packageRules": [
    {
      "description": "Group Microsoft.Extensions packages",
      "matchPackagePatterns": ["^Microsoft\\.Extensions\\."],
      "groupName": "Microsoft.Extensions",
      "matchManagers": ["nuget"]
    },
    {
      "description": "Group Azure SDK packages",
      "matchPackagePatterns": ["^Azure\\.", "^Microsoft\\.Azure\\."],
      "groupName": "Azure SDKs",
      "matchManagers": ["nuget"]
    },
    {
      "description": "Group Entity Framework Core packages",
      "matchPackagePatterns": ["^Microsoft\\.EntityFrameworkCore"],
      "groupName": "Entity Framework Core",
      "matchManagers": ["nuget"]
    },
    {
      "description": "Group xUnit testing packages",
      "matchPackagePatterns": ["^xunit"],
      "groupName": "xUnit",
      "matchManagers": ["nuget"]
    },
    {
      "description": "Group GitHub Actions",
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions"
    },
    {
      "description": "Auto-merge patch updates for non-major dependencies",
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "description": "Do not update pre-release packages automatically",
      "matchPackagePatterns": ["^Azure\\.AI\\.OpenAI$", "^System\\.CommandLine$"],
      "matchManagers": ["nuget"],
      "enabled": false
    }
  ],
  "nuget": {
    "registryUrls": ["https://api.nuget.org/v3/index.json"]
  }
}
